<Window x:Class="IndustrialUnit.WpfUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Industrial Unit Manager" MinHeight="750" MinWidth="1300"
        xmlns:viewModel="clr-namespace:IndustrialUnit.WpfUI.ViewModels"
        xmlns:view="clr-namespace:IndustrialUnit.WpfUI.Views">
  
  <Window.DataContext>
    <viewModel:MainViewModel/>
  </Window.DataContext>

  <Grid>
    <DockPanel>
      <Menu DockPanel.Dock="Top" >
        <MenuItem Header="_File">
          <MenuItem Header="_Load collection" />
          <MenuItem Header="_Save collection" />
          <MenuItem Header="_Exit" />
        </MenuItem>
        <MenuItem Header="_Unit category">
          <MenuItem Header="_Equipment" Command="{Binding LoadEquipmentView}"/>
          <MenuItem Header="_Valve" Command="{Binding LoadValveView}"/>
          <MenuItem Header="_Instrument" />
        </MenuItem>
      </Menu>
    </DockPanel>
    <Frame x:Name="Main" Margin="0,20,0,0" Grid.Column="0" Grid.Row="0" Content="{Binding Frame}" NavigationUIVisibility="Hidden"/>
  </Grid>
</Window>
