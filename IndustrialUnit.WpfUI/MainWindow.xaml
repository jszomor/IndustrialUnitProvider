<Window x:Class="IndustrialUnit.WpfUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Industrial Unit Manager" Height="600" Width="1300"
        xmlns:viewModel="clr-namespace:IndustrialUnit.WpfUI.ViewModels">
  
  <Window.DataContext>
    <viewModel:MainViewModel/>
  </Window.DataContext>
  
  <Grid>
    <DockPanel>
      <Menu DockPanel.Dock="Top">
        <MenuItem Header="_File">
          <MenuItem Header="_Load collection" />
          <MenuItem Header="_Save collection" />
          <MenuItem Header="_Exit" />
        </MenuItem>
        <MenuItem Header="_Unit category">
          <MenuItem Header="_Equipment" Click="LoadEquipmentMenu_click"/>
          <MenuItem Header="_Valve" Click="LoadValveMenu_click"/>
          <MenuItem Header="_Instrument" />
        </MenuItem>
      </Menu>
      <TextBox AcceptsReturn="True" />
    </DockPanel>
    <Frame x:Name="Main" Margin="0,20,0,0" Grid.Column="0" Grid.Row="0"/>
  </Grid>
</Window>
