<UserControl x:Class="IndustrialUnit.WpfUI.Views.FileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IndustrialUnit.WpfUI.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

  <UserControl.DataContext>
    <local:FileViewModel/>
  </UserControl.DataContext>

  <Grid Background="MintCream">

    <Grid.RowDefinitions>
      <RowDefinition Height="20"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="auto"/>
      <ColumnDefinition Width="auto"/>
      <ColumnDefinition Width="auto"/>
      <ColumnDefinition Width="auto"/>
    </Grid.ColumnDefinitions>

    <StackPanel
      Grid.Row="1"
      Margin="10,10,10,10"
      Orientation="Horizontal">

      <StackPanel Width="150">

        <Button
        Style="{StaticResource RoundButtonTemplate}"
        Content="Browse file" 
        Margin="5"
        Command="{Binding SelectFileDialogBox}"
        Height="30"
        FontSize="14"/>

        <Border BorderThickness="1" BorderBrush="Gray">
          <TextBlock
          Height="30"
          Text="{Binding SelectedFile, UpdateSourceTrigger=PropertyChanged}"
          Background="AntiqueWhite"
          Padding="5"
          FontSize="12">
          </TextBlock>
        </Border>

        <Button
        Style="{StaticResource RoundButtonTemplate}"
        Content="Upload" 
        Margin="5"
        Command="{Binding LoadFile}"
        Height="30"
        FontSize="14"/>

      </StackPanel>

      <Button 
        Style="{StaticResource RoundButtonTemplate}"
        Content="Save collection" 
        Margin="5"
        Height="30"
        Width="120"
        FontSize="14"/>

      <Button        
        Style="{StaticResource RoundButtonTemplate}"
        Content="Dowload temple" 
        Margin="5"
        Height="30"
        Width="120"
        FontSize="14"/>

    </StackPanel>

    <Border BorderThickness="1" BorderBrush="Gray" Grid.Row="4" Grid.Column="0" VerticalAlignment="Top" Height="200" Margin="10,88,92,0">
      <ListView
        ItemsSource="{Binding LogMessage}"
        Background="AntiqueWhite"
        Padding="3"
        FontSize="13">        
      </ListView>         
    </Border>
  </Grid>
</UserControl>
